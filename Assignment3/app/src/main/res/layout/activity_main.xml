<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sdsu.cs.cs646.assignment3.MainActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/bird_image"
        android:layout_marginTop="100pt"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_button"
        android:text="@string/Start"
        android:visibility="visible"
        android:clickable="true"
        android:onClick="@string/Start"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="91dp"
        android:layout_marginLeft="110dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop_button"
        android:text="@string/Pause"
        android:layout_toRightOf="@+id/start_button"
        android:visibility="visible"
        android:clickable="true"
        android:onClick="@string/Pause"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="91dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit_button"
        android:text="@string/exit"
        android:visibility="visible"
        android:clickable="true"
        android:onClick="@string/exit"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="155dp"
        android:layout_alignParentBottom="true"/>

    <edu.sdsu.cs.cs646.assignment3.DrawRectangles
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"/>

</RelativeLayout>
